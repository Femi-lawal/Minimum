{
    "name": "minimum-backend",
    "version": "1.0.0",
    "description": "Serverless backend for Minimum (Medium clone)",
    "scripts": {
        "dev": "serverless offline",
        "deploy": "serverless deploy",
        "deploy:dev": "serverless deploy --stage dev",
        "deploy:prod": "serverless deploy --stage prod",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "lint": "eslint src --ext .ts",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@aws-lambda-powertools/logger": "^2.0.4",
        "@aws-lambda-powertools/metrics": "^2.0.4",
        "@aws-lambda-powertools/tracer": "^2.0.4",
        "@aws-sdk/client-dynamodb": "^3.490.0",
        "@aws-sdk/client-eventbridge": "^3.490.0",
        "@aws-sdk/client-s3": "^3.490.0",
        "@aws-sdk/client-ses": "^3.490.0",
        "@aws-sdk/client-sns": "^3.490.0",
        "@aws-sdk/lib-dynamodb": "^3.490.0",
        "@aws-sdk/s3-request-presigner": "^3.490.0",
        "@middy/core": "^5.2.0",
        "@middy/http-cors": "^5.2.0",
        "@middy/http-error-handler": "^5.2.0",
        "@middy/http-json-body-parser": "^5.2.0",
        "@middy/validator": "^5.2.0",
        "algoliasearch": "^4.22.0",
        "nanoid": "^5.0.4",
        "sharp": "^0.33.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.133",
        "@types/node": "^20.11.5",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "esbuild": "^0.19.11",
        "eslint": "^8.56.0",
        "serverless": "^3.38.0",
        "serverless-esbuild": "^1.52.1",
        "serverless-iam-roles-per-function": "^3.2.0",
        "serverless-offline": "^13.3.2",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    },
    "engines": {
        "node": ">=22.0.0"
    }
}